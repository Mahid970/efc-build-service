---
import UpperRightArrow from '../assets/icons/upper-right-arrow.svg';
---

  <div class="py-12 md:py-16  mx-auto ">
    <div class="grid grid-cols-1 lg:grid-cols-5 items-center ">
      <div class="bg-secondary xl:p-20 md:p-12 sm:p-8 p-4 col-span-3 lg:border-r  border-gray-300">
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-perfectly-nineties mb-8 md:mb-12">
          Request a Quote
        </h2>
        
        <form class="space-y-6 font-plus-jakarta-sans">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="firstName" class="block text-sm md:text-base mb-2">
                First name<span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="firstName"
                placeholder="First name"
                class="w-full px-0 py-3 border-0 border-b border-gray-300 focus:border-gray-900 focus:ring-0 placeholder:text-gray-400 text-sm md:text-base bg-transparent outline-none transition-colors"
              />
            </div>
            
            <div>
              <label for="email" class="block text-sm md:text-base mb-2">
                Email<span class="text-red-500">*</span>
              </label>
              <input
                type="email"
                id="email"
                placeholder="eg. name@email.com"
                class="w-full px-0 py-3 border-0 border-b border-gray-300 focus:border-gray-900 focus:ring-0 placeholder:text-gray-400 text-sm md:text-base bg-transparent outline-none transition-colors"
              />
            </div>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="phone" class="block text-sm md:text-base mb-2">
                Your phone<span class="text-red-500">*</span>
              </label>
              <input
                type="tel"
                id="phone"
                placeholder="eg. 0412 345 678"
                class="w-full px-0 py-3 border-0 border-b border-gray-300 focus:border-gray-900 focus:ring-0 placeholder:text-gray-400 text-sm md:text-base bg-transparent outline-none transition-colors"
              />
            </div>
            
            <div>
              <label for="address" class="block text-sm md:text-base mb-2">
                Project address<span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="address"
                placeholder="Project address"
                class="w-full px-0 py-3 border-0 border-b border-gray-300 focus:border-gray-900 focus:ring-0 placeholder:text-gray-400 text-sm md:text-base bg-transparent outline-none transition-colors"
              />
            </div>
          </div>
          
          <div>
            <label for="projectType" class="block text-sm md:text-base mb-2">
              Project type<span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="projectType"
              placeholder="Development"
              class="w-full px-0 py-3 border-0 border-b border-gray-300 focus:border-gray-900 focus:ring-0 placeholder:text-gray-400 text-sm md:text-base bg-transparent outline-none transition-colors"
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm md:text-base mb-2">
              Your message<span class="text-red-500">*</span>
            </label>
            <textarea
              id="message"
              rows="4"
              placeholder="Let's talk about your dream home"
              class="w-full px-0 py-3 border-0 border-b border-gray-300 focus:border-gray-900 focus:ring-0 placeholder:text-gray-400 text-sm md:text-base bg-transparent outline-none resize-none transition-colors"
            ></textarea>
          </div>
          
          <div class="pt-4">
          <button class="bg-btn-color flex gap-2 items-center font-plus-jakarta-sans text-white py-3 px-6 font-medium text-base">
        CONTACT US
        <UpperRightArrow/>
      </button>
            <p class="text-sm my-4 text-gray-700">
              Same-day response guaranteed.
            </p>
          </div>
        </form>
      </div>
      
      
        <div class="bg-secondary col-span-2 xl:p-20 md:p-12 sm:p-8 p-4 border-y border-gray-300 space-y-12 md:space-y-24 mt-8 lg:mt-0 ">
        <div class="flex ">
          <h3 class="text-2xl xl:text-3xl font-perfectly-nineties mb-4 md:mb-6 w-1/3">CONTACT</h3>
          <div class="space-y-2 text-sm md:text-base font-plus-jakarta-sans w-2/3">
            <p>
              <span class="font-medium">Phone:</span> 0414 536 134
            </p>
            <p>
              <span class="font-medium">Email:</span> nathan@alternatevision.com.au
            </p>
          </div>
        </div>
        
        <div class="flex">
          <h3 class="text-2xl xl:text-3xl font-perfectly-nineties  w-1/3 mb-4 md:mb-6">OFFICE</h3>
          <p class="text-sm md:text-base font-plus-jakarta-sans w-2/3">
            4140 Parker Rd. Allentown,<br />
            New Mexico 31134
          </p>
        </div>
        
        <div class="flex">
          <h3 class="text-2xl xl:text-3xl font-perfectly-nineties mb-4 md:mb-6 w-1/3">SOCIAL</h3>
          <div class="space-y-2 text-sm md:text-base font-plus-jakarta-sans w-2/3 ">
            <p>Instagram</p>
            <p>Facebook</p>
          </div>
        </div>
      </div>
     
    </div>
  </div>


<style>
  input:focus,
  textarea:focus {
    outline: none;
  }
</style>